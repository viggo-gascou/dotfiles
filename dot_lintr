# -- DESCRIPTION --------------------------------------------------------------

# ~/.lintr
# =============================================================================
# Used by R to determine the default linting behaviour.
#
# See https://lintr.r-lib.org/reference/linters.html


linters: with_defaults(
    line_length_linter(120), 
    single_quotes_linter = NULL,
    object_name_linter(styles = c('snake_case', 'SNAKE_CASE', 'dotted.case', 'CamelCase')),
    commented_code_linter = NULL)

